{% extends 'base.jinja2' %}

{% block subtitle %}Create new donation{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if error %}<p>{{ error }}</p>{% endif %}
    <label for="name-input">Name: </label><input type="text" id="name-input" name="name"><br>
    <label for="amount-input">Amount: </label><input type="number" id="amount-input" name="amount"><br>
    <input type="submit" value="Create Donation">
</form>
{% endblock content %}
